{
	"name": "CopyPipeline",
	"properties": {
		"activities": [
			{
				"name": "CopyFromBlobToBlob",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "adftutorial/input/@{pipeline().parameters.copyPath}"
					},
					{
						"name": "Destination",
						"value": "adftutorial/output/"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "InputDataset",
						"type": "DatasetReference",
						"parameters": {
							"copyPathDS": "@pipeline().parameters.copyPath"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "OutputDataset",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"copyPath": {
				"type": "string",
				"defaultValue": "emp.txt"
			}
		},
		"annotations": [],
		"lastPublishTime": "2020-11-30T07:40:17Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}